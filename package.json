{
  "name": "ghost-terminal",
  "displayName": "Ghost Terminal",
  "version": "1.0.16",
  "description": "KYC.RIP Tactical Monero Desktop Wallet",
  "repository": {
    "type": "git",
    "url": "https://github.com/KYC-rip/ghost-terminal.git"
  },
  "main": "./out/main/index.js",
  "author": "KYC.RIP",
  "scripts": {
    "setup-bins": "node scripts/download-bins.js",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:renderer": "tsc --noEmit -p tsconfig.renderer.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:renderer",
    "start": "electron-vite preview",
    "prebuild": "npm run setup-bins",
    "predev": "npm run setup-bins",
    "prestart": "npm run setup-bins",
    "deploy:public": "cd .. && ./deploy-public.sh",
    "deploy:subtree": "cd .. && git subtree push --prefix desktop git@github-xbtoshi:KYC-rip/ghost-terminal.git main"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "KYC-rip",
        "repo": "ghost-terminal"
      }
    ],
    "mac": {
      "icon": "public/icon.png"
    },
    "win": {
      "icon": "public/icon.png"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": ["AppImage"]
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "ethers": "6.16.0",
    "framer-motion": "12.34.0",
    "js-yaml": "^4.1.1",
    "lightweight-charts": "^5.1.0",
    "lucide-react": "0.564.0",
    "qrcode.react": "^4.2.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-helmet-async": "2.0.5",
    "react-router-dom": "7.13.0",
    "tar": "^7.5.9",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/tar": "^6.1.13",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "10.4.24",
    "electron": "40.4.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "5.0.0",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}